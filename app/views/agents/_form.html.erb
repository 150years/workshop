<%= form_with(model: agent, html: { contents: true }) do |form| %>
  <% if agent.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(agent.errors.count, "error") %> prohibited this agent from being saved:</h2>
      <ul class="text-sm mis-3" style="list-style: disc">
        <% agent.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-col items-start gap-half mbe-2">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>  
  </div>
  <div class="flex flex-col items-start gap-half mbe-2">
    <%= form.label :phone, class: "text-sm font-medium leading-none" %>
    <%= form.phone_field :phone, class: "input" %>
  </div>
  <div class="flex flex-col items-start gap-half mbe-2">
    <%= form.label :email, class: "text-sm font-medium leading-none" %>
    <%= form.email_field :email, class: "input" %>
  </div>
  <div class="flex flex-col items-start gap-half mbe-2">
    <%= form.label :commission, "Commission, %", class: "text-sm font-medium leading-none" %>
    <%= form.text_field :commission, class: "input" %>
  </div>
  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :passport, class: "text-sm font-medium leading-none" %>
    <%= form.file_field :passport, accept: "image/*,application/pdf", class: "input" %>
  </div>
  <div class="flex flex-col gap-half mbe-4">
    <%= form.label :workpermit, class: "text-sm font-medium leading-none" %>
    <%= form.file_field :workpermit, accept: "image/*,application/pdf", class: "input" %>
  </div>

  <div class="flex items-center gap">
    <%= button_tag tag.span(@agent.persisted? ? "Update" : "Create"), class: "btn btn--primary btn--loading" %>
    <%= link_to "Cancel", agents_path, class: "btn" %>
  </div>
<% end %>
