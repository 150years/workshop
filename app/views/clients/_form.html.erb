<%= form_with(model: client, html: { contents: true }) do |form| %>
  <% if client.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul class="text-sm mis-3" style="list-style: disc">
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-col items-start gap-half mbe-2">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>
  <div class="flex flex-col items-start gap-half mbe-2">
    <%= form.label :email, class: "text-sm font-medium leading-none" %>
    <%= form.email_field :email, class: "input" %>
  </div>
  <div class="inline-flex items-center mbs-2 mie-1">
    <%= button_tag tag.span(@client.persisted? ? "Update Client" : "Create Client"), class: "btn btn--primary btn--loading" %>
  </div>
<% end %>
