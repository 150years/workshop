<% content_for :title, "Clients" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">Clients</h1>
  <%= link_to "New client", new_client_path, class: "btn btn--primary" %>
</div>

<div id="clients" class="flex flex-col" style="gap: 2rem;">
   <table class="table">
    <thead>
      <th>#</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Tax_id</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
      <tr>
          <%= render client %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
