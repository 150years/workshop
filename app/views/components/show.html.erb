<%= render "components/component", component: @component %>

<div class="flex flex-wrap items-center gap mbs-6" style="--row-gap: .5rem">
  <%= link_to "Edit this component", edit_component_path(@component), class: "btn" %>
  <%= link_to "Back to components", components_path, class: "btn" %>
  <%= link_to "Destroy this component", @component, class: "btn", data: { turbo_method: :delete, turbo_confirm: "Are you absolutely sure?" } %>
</div>
