<%= form_with(model: order_version, html: { contents: true }) do |form| %>
  <% if order_version.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(order_version.errors.count, "error") %> prohibited this order_version from being saved:</h2>
      <ul class="text-sm mis-3" style="list-style: disc">
        <% order_version.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-col gap">
    <%= form.label :profit, "Profit, %", class: "font-bold text-sm" %>
    <%= form.text_field :profit, class: "input" %>
  </div>
  <div class="flex flex-col gap">
    <%= form.label :agent, "Agent, %", class: "font-bold text-sm" %>
    <%= form.text_field :agent, class: "input" %>
  </div>
  <div class="flex flex-col gap">
<div class="flex flex-col gap">
    <%= form.label :version_note, class: "font-bold text-sm" %>
    <%= form.text_field :version_ote, class: "input" %>
  </div>
   <div class="flex items-center gap">
    <%= form.check_box :final_version, class: "checkbox" %>
    <%= form.label :final_version, class: "text-sm" %>
  </div>
  <div class="inline-flex items-center justify-between mbs-2 mie-1 gap">
    <%= link_to "Back", @order, class: "btn" %>
    <%= button_tag tag.span(order_version.persisted? ? "Update Version" : "Create Version"), class: "btn btn--primary btn--loading" %>
  </div>
<% end %>
