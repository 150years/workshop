<% content_for :title, "Orders" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">Orders</h1>
  <%= link_to "New order", new_order_path, class: "btn btn--primary" %>
</div>

<div id="orders" class="flex flex-col" style="gap: 2rem;">
  <% @orders.each do |order| %>
    <div class="flex flex-col  gap w-full">
      <%= render order %>
      <%= link_to "Show this order", order, class: "btn" %>
    </div>
  <% end %>
</div>
