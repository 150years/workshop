<tr data-controller="dialog">
  <th>
    <a href="" data-action="click->dialog#showModal:prevent"><%= product.name %></a>
    <dialog class="dialog" data-dialog-target="menu">
      <button type="button" class="btn btn--plain dialog__close" data-action="click->dialog#close">
        <%= image_tag "x.svg", size: 16, aria: { hidden: true } %>
        <span class="sr-only">Close</span>
      </button>
      <div class="dialog__content">
        <%= turbo_frame_tag product, src: product_path(product), loading: "lazy" do %>
          <div class="flex flex-col gap">
            <div class="skeleton rounded-lg" style="height: 300px; width: 300px;"></div>
          </div>
        <% end %>
      </div>
    </dialog>
  </th>
  <td><%= product.width %> cm</td>
  <td><%= product.height %> cm</td>
  <td><%= product.area %> cm²</td>
  <td><%= product.perimeter %> cm</td>
  <td><%= product.comment.presence || '—' %></td>
  <td class="text-end">$<%= product.price %></td>
</tr>