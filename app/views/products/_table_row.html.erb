<tr data-controller="link" data-link-href-value="<%= edit_product_path(product) %>" class="cursor-pointer hover:bg-gray-50 transition">
  <td><%= product.id %></td>
  <td><%= product.image.attached? ? image_or_placeholder(product.image, 100, 150) : "No image" %></td>
  <td><%= link_to product.name, product, data: {turbo_frame: "_top"} %></td>
  <td><%= UnitConverter.mm_to_m(product.width) %></td>
  <td><%= UnitConverter.mm_to_m(product.height) %></td>
  <td style='white-space: nowrap;'><%= product.area_m2 %></td>
  <td><%= product.comment.presence || 'â€”' %></td>
  <td class="text-end"><%= product.price.format %></td>
  <td style='white-space: nowrap;'>
    <%= link_to "Edit", product, data: {turbo_frame: "_top"}%> |
    <%= link_to "Delete", product, data: { turbo_method: :delete, turbo_confirm: "Are you absolutely sure?" } %>
  </td>
</tr>
