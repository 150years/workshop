<% content_for :title, "Editing product" %>
<%= turbo_frame_tag @product, target: "_top" do %>
  <h1 class="font-bold text-4xl mbe-4">Editing product</h1>
  <%= render "form", product: @product %>
  <div class="inline-flex flex-wrap items-center gap mbs-2" style="--row-gap: .5rem">
    <%= link_to "Show this product", @product, class: "btn" %>
    <%= link_to "Back to products", products_path, class: "btn" %>
  </div>
<% end %>