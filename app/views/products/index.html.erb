<% content_for :title, "Products" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">Products</h1>
  <%= link_to "New product", new_product_path, class: "btn btn--primary" %>
</div>

<div id="products" class="flex flex-col" style="gap: 2rem;">
  <% @products.each do |product| %>
    <div class="flex flex-col items-start gap">
      <%= render product %>
      <%= link_to "Show this product", product, class: "btn" %>
    </div>
  <% end %>
</div>
