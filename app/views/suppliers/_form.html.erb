<%= form_with(model: supplier, html: { contents: true }) do |form| %>
  <% if supplier.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% supplier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :contact_info, class: "text-sm font-medium leading-none" %>
    <%= form.textarea :contact_info, class: "input" %>
  </div>

  <div class="inline-flex items-center mbs-2 mie-1 gap">
    <%= form.submit class: "btn btn--primary" %>
    <%= link_to "Back to suppliers", suppliers_path, class: "btn" %>
  </div>
<% end %>
