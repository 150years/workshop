<h1 class="font-bold text-4xl mbe-4">Forgot your password?</h1>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "flex flex-col gap"  }) do |form| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= form.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Enter your email address", class: "input" %>
  <%= form.submit "Email reset instructions", class: "btn btn--primary i-min" %>
<% end %>