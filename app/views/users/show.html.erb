<%= render "users/user", user: @user %>

<div class="flex flex-wrap items-center gap mbs-6" style="--row-gap: .5rem">
  <%= link_to "Edit this user", edit_user_path(@user), class: "btn" %>
  <%= link_to "Back to users", users_path, class: "btn" %>
  <%= link_to "Destroy this user", @user, class: "btn", data: { turbo_method: :delete, turbo_confirm: "Are you absolutely sure?" } %>
</div>
